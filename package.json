{
  "name": "boilerplate-webpack",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "Project frontend with webpack",
  "repository": "https://github.com/everton-dgn/boilerplate_webpack",
  "main": "./src/ui/index.js",
  "scripts": {
    "dev": "env-cmd -f .env.local webpack serve --progress",
    "start": "env-cmd -f .env.prod webpack serve --open",
    "build:local": "env-cmd -f .env.local webpack",
    "build:dev": "env-cmd -f .env.dev webpack",
    "build:prod": "env-cmd -f .env.prod webpack",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint --cache src --ext ts,tsx,json --max-warnings=0",
    "lint:fix": "eslint --cache --fix src --ext ts,tsx,json",
    "format": "prettier --cache --write .",
    "check:format": "prettier --cache --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50%",
    "test:c": "jest --maxWorkers=50% --collectCoverage",
    "test:w": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "generate": "yarn plop --plopfile componentGenerator/plopfile.js",
    "check:update": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.11.2",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@storybook/addon-a11y": "^7.0.18",
    "@storybook/addon-essentials": "^7.0.18",
    "@storybook/addon-links": "^7.0.18",
    "@storybook/react": "^7.0.18",
    "@storybook/react-webpack5": "^7.0.18",
    "@storybook/testing-library": "^0.1.0",
    "@svgr/webpack": "^8.0.1",
    "@swc/core": "^1.3.61",
    "@swc/jest": "^0.2.26",
    "@testing-library/dom": "9.3.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "^29.5.2",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "babel-loader": "^9.1.2",
    "babel-plugin-styled-components": "^2.1.3",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.1.3",
    "env-cmd": "^10.1.0",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-testing-library": "5.11.0",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.1",
    "husky": "8.0.3",
    "image-webpack-loader": "^8.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-styled-components": "^7.1.1",
    "lint-staged": "13.2.2",
    "plop": "^3.1.2",
    "prettier": "2.8.8",
    "react-refresh": "^0.14.0",
    "serve": "^14.2.0",
    "source-map-loader": "^4.0.1",
    "storybook": "^7.0.18",
    "storybook-addon-swc": "^1.2.0",
    "storybook-dark-mode": "^3.0.0",
    "storybook-mobile": "^1.0.1",
    "swc-loader": "^0.2.3",
    "typescript": "5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  }
}
